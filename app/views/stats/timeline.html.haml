:javascript
  function render_timeline() {
    var timeline;

    $.getJSON("tljson.json",function(result){
      drawVisualization(result);
    });

    function drawVisualization(result) {
      //console.log (JSON.stringify(result));
      var options = {
                    'width':  '100%',
                    'height': '400px',
                    'editable': false,
                    'style': 'box',
                    'showMajorLabels': false,
                    'showMinorLabels': false
      };

      timeline = new links.Timeline(document.getElementById('mytimeline'));
      timeline.draw(result, options);
    };
  }

%body{:onload => "render_timeline();"}
  %h1 Timeline (Bugs and Versions)
  #hiddenval{:style => "display: none;"}
  %p{:style => "text-align:center;"}
    This timeline depicts a chonological visualization of the bugs & version releases for
    %b= @stat_id
  #mytimeline
