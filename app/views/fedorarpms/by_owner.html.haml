%div.page-header
  %h1= _('All Fedora Rpms maintained by %{name}') % { :name => @name}
  %h2= link_to _('See it in a nice bubble chart'), stats_path + "/" + @name + "/user_rpms"

%table.table.table-striped.table-condensed
  %thead
    %tr
      %th= sortable _('Rpm')
      %th= _('Upstream')
      %th= _('Rawhide')
      %th= _('Git Commits')

  %tbody
    - @rpms.each do |rpm|
      %tr
        %td= link_to rpm.name, fedorarpm_path(rpm.name)
        %td= rpm.ruby_gem.version if rpm.ruby_gem
        %td= rpm.version_for 'Rawhide'
        %td= rpm.commits

